<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.education.web.screens.legal_person">
    <data>
        <instance id="legal_personDc"
                  class="com.company.education.entity.Legal_person"
                  view="legal_person-view">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="legal_personDc">
            <column width="250px">
                <textField id="name_of_companyField" property="name_of_company"/>
                <textField id="innField" property="inn"/>
                <textField id="personal_accountField" property="personal_account"/>
                <pickerField id="bankField" property="bank">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
